{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DataLake Data Received Event",
  "description": "Event emitted when sensor data is received by DataLake service",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "const": "datalake.data-received",
      "description": "Event type identifier"
    },
    "event_version": {
      "type": "string",
      "const": "v1",
      "description": "Event schema version"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO8601 UTC format"
    },
    "dedupe_key": {
      "type": "string",
      "description": "Idempotency key: {station_id}:{ts}:{sensor_id}"
    },
    "data": {
      "type": "object",
      "properties": {
        "station_id": {
          "type": "string",
          "description": "Station identifier"
        },
        "sensor_id": {
          "type": "string",
          "description": "Sensor identifier"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Sensor reading timestamp"
        },
        "readings": {
          "type": "object",
          "properties": {
            "temperature": {
              "type": "number",
              "format": "float",
              "description": "Temperature in Celsius"
            },
            "humidity": {
              "type": "number",
              "format": "float",
              "description": "Humidity percentage"
            },
            "smoke_level": {
              "type": "number",
              "format": "float",
              "description": "Smoke level reading"
            },
            "co_level": {
              "type": "number",
              "format": "float",
              "description": "Carbon monoxide level"
            },
            "battery_level": {
              "type": "number",
              "format": "float",
              "description": "Battery level percentage"
            },
            "signal_strength": {
              "type": "number",
              "format": "float",
              "description": "Signal strength"
            }
          },
          "required": ["temperature", "humidity", "smoke_level", "co_level", "battery_level", "signal_strength"]
        },
        "location": {
          "type": "object",
          "properties": {
            "latitude": {
              "type": "number",
              "format": "double"
            },
            "longitude": {
              "type": "number",
              "format": "double"
            },
            "address": {
              "type": "string"
            },
            "building_name": {
              "type": "string"
            },
            "floor": {
              "type": "string"
            },
            "room": {
              "type": "string"
            }
          },
          "required": ["latitude", "longitude"]
        }
      },
      "required": ["station_id", "sensor_id", "timestamp", "readings", "location"]
    }
  },
  "required": ["event_id", "event_type", "event_version", "timestamp", "dedupe_key", "data"]
}
