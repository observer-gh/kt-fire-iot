{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Alert Notification Dispatched Event",
  "description": "Event emitted when an alert notification is dispatched",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "event_type": {
      "type": "string",
      "const": "alert.notification-dispatched",
      "description": "Event type identifier"
    },
    "event_version": {
      "type": "string",
      "const": "v1",
      "description": "Event schema version"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO8601 UTC format"
    },
    "dedupe_key": {
      "type": "string",
      "description": "Idempotency key: {alert_id}:{channel}:{dispatch_id}"
    },
    "data": {
      "type": "object",
      "properties": {
        "dispatch_id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique dispatch identifier"
        },
        "alert_id": {
          "type": "string",
          "format": "uuid",
          "description": "Alert that was dispatched"
        },
        "channel": {
          "type": "string",
          "enum": ["WEBHOOK", "EMAIL", "SMS", "PUSH", "SLACK"],
          "description": "Dispatch channel"
        },
        "recipient": {
          "type": "string",
          "description": "Recipient identifier (email, phone, webhook URL, etc.)"
        },
        "dispatched_at": {
          "type": "string",
          "format": "date-time",
          "description": "When the notification was dispatched"
        },
        "status": {
          "type": "string",
          "enum": ["SENT", "DELIVERED", "FAILED", "RETRY"],
          "description": "Dispatch status"
        },
        "response_code": {
          "type": "integer",
          "description": "HTTP response code from the channel"
        },
        "response_message": {
          "type": "string",
          "description": "Response message from the channel"
        },
        "retry_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of retry attempts"
        },
        "message_content": {
          "type": "object",
          "properties": {
            "subject": {
              "type": "string",
              "description": "Message subject/title"
            },
            "body": {
              "type": "string",
              "description": "Message body content"
            },
            "priority": {
              "type": "string",
              "enum": ["LOW", "NORMAL", "HIGH", "URGENT"],
              "description": "Message priority"
            }
          },
          "description": "Content of the dispatched message"
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true,
          "description": "Additional dispatch metadata"
        }
      },
      "required": ["dispatch_id", "alert_id", "channel", "recipient", "dispatched_at", "status"]
    }
  },
  "required": ["event_id", "event_type", "event_version", "timestamp", "dedupe_key", "data"]
}
